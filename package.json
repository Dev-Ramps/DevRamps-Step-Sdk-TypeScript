{
  "name": "@devramps/sdk-typescript",
  "version": "0.1.3",
  "description": "SDK for building custom deployment steps for DevRamps",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "devramps",
    "deployment",
    "custom-step",
    "ci-cd",
    "workflow",
    "automation"
  ],
  "author": "DevRamps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dev-Ramps/DevRamps-Step-Sdk-TypeScript.git"
  },
  "bugs": {
    "url": "https://github.com/Dev-Ramps/DevRamps-Step-Sdk-TypeScript/issues"
  },
  "homepage": "https://github.com/Dev-Ramps/DevRamps-Step-Sdk-TypeScript",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "minimist": "^1.2.8"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.16",
    "zod": "^4.3.4"
  }
}
